{
  "name": "courses-md",
  "version": "0.3.1",
  "description": "Write courses in Markdown and publish them as HTML slides",
  "main": "lib/index.js",
  "bin": {
    "courses-md": "./bin/courses-md"
  },
  "scripts": {
    "client": "npm run client:build && npm run client:watch",
    "client:build": "node dist.js",
    "client:watch": "onchange \"client/**/*\" -- npm run client:build",
    "docs": "concurrently \"npm run docs:api\" \"npm run docs:md\"",
    "docs:api": "npm run docs:api:clean && npm run docs:api:build && npm run docs:api:watch",
    "docs:api:build": "esdoc",
    "docs:api:clean": "rimraf docs/api",
    "docs:api:watch": "onchange \"client/**/*.js\" \"lib/**/*.js\" -- npm run docs:api:build",
    "docs:md": "npm run client:build && npm run docs:md:clean && npm run docs:md:build && npm run docs:md:watch",
    "docs:md:build": "node ./bin/courses-md build",
    "docs:md:clean": "rimraf docs/md",
    "docs:md:watch": "onchange \"src/**/*.*\" \"subjects/**/*.*\" -- npm run docs:md:build",
    "doctoc": "doctoc --notitle --github README.md",
    "prepublishOnly": "npm run client:build",
    "start": "concurrently \"npm run docs\" \"npm run client\""
  },
  "author": {
    "name": "Simon Oulevay (Alpha Hydrae)",
    "email": "npm@alphahydrae.com"
  },
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "base64-image-loader": "^1.2.0",
    "chalk": "^2.1.0",
    "chokidar": "^1.7.0",
    "commander": "^2.11.0",
    "css-loader": "^0.28.7",
    "debug": "^3.0.1",
    "del": "^3.0.0",
    "exports-loader": "^0.6.4",
    "file-loader": "^0.11.2",
    "fs-extra": "^4.0.2",
    "get-port": "^3.2.0",
    "globby": "^6.1.0",
    "handlebars": "^4.0.10",
    "imports-loader": "^0.7.1",
    "jquery": "^3.2.1",
    "live-server": "^1.2.0",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "md2remark": "^0.1.5",
    "ora": "^1.3.0",
    "path-is-inside": "^1.0.2",
    "pretty-bytes": "^4.0.2",
    "remark-slide": "^0.14.0",
    "shell-escape": "^0.2.0",
    "style-loader": "^0.18.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "tmp": "0.0.33",
    "unsemantic": "^1.1.3",
    "urijs": "^1.18.12",
    "webpack": "^3.5.6"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "doctoc": "^1.3.0",
    "esdoc": "^1.0.2",
    "esdoc-node": "^1.0.2",
    "esdoc-standard-plugin": "^1.0.0",
    "onchange": "^3.2.1"
  }
}
